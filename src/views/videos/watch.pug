extends ../base.pug

block content 
    video(src="/"+video.fileUrl, controls, width="100%")
    div
        p=video.description
        small=video.createdAt 
    div
        medium Uploaded by #{video.owner.name}
    if String(video.owner._id) === String(loggedInUser._id)
        a(href=`${video.id}/edit`) Edit Video &rarr;
        br
        a(href=`${video.id}/delete`) Delete Video &rarr;
    br
    p Video ID: #{video.id}