doctype html
html(lang="ko")
    head   
        title #{pageTitle} | LeeTube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header
            if testUser.loggedIn
                small Hello #{testUser.username}
            nav 
                ul
                    if testUser.loggedIn
                        li
                            a(href="/login") Logout
                    else
                        li
                            a(href="/login") Login
            h1=pageTitle
        main
            block content 
    include partials/footer